<div class="d-flex justify-content-center">
    <ul class="pagination">
        {% if current_page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route_name, {'page': current_page - 1}) }}">&laquo;</a>
            </li>
        {% endif %}

        {% for i in 1..total_pages %}
            <li class="page-item{{ i == current_page ? ' active' }}">
                <a class="page-link"
                   href="{{ path(route_name, {'page': i > 1 ? i : null}) }}">
                    {{ i }}
                </a>
            </li>
        {% endfor %}

        {% if current_page < total_pages %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route_name, {'page': current_page + 1}) }}">&raquo;</a>
            </li>
        {% endif %}
    </ul>
</div>