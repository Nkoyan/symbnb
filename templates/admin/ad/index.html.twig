{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">RÃ©servations</th>
                <th class="text-center">Note</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for ad in ads %}
                <tr>
                    <td>
                        <a target="_blank" href="{{ path('ads_show', {'id': ad.id, 'slug': ad.slug}) }}">{{ ad.id }}</a>
                    </td>
                    <td>
                        {{ ad.title }}
                    </td>
                    <td>
                        <img class="avatar avatar-mini mr-2" src="{{ ad.author.picture }}"
                             alt="Avatar de {{ ad.author.fullName }}">
                        {{ ad.author.fullName }}
                    </td>
                    <td class="text-center">
                        <span class="badge badge-primary rounded">{{ ad.bookings | length }}</span>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-primary rounded">{{ ad.avgRating }}</span>
                    </td>
                    <td>
                        <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('admin_ads_delete', {'id': ad.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}