{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des utilisateurs</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date d'inscription</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Annonces</th>
                <th>RÃ©servations</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.createdAt | date('d/m/Y H:i') }}</td>
                    <td>
                        <img class="avatar avatar-mini mr-2" src="{{ user.picture }}" alt="">
                        {{ user.fullName }}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.ads | length }}</td>
                    <td>{{ user.bookings | length }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}